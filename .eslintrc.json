{
    "parser": "@typescript-eslint/parser",
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended" // Uses the recommended rules from @typescript-eslint/eslint-plugin
    ],
    "parserOptions": {
      "ecmaVersion": 2019, // Allows for the parsing of modern ECMAScript features
      "sourceType": "module" // Allows for the use of imports
    },
    "rules": {
      "indent": ["error", 2], // Enforce a consistent indentation style of 2 spaces
      "linebreak-style": ["error", "unix"], // Enforce UNIX linebreaks
      "quotes": ["error", "single"], // Enforce the use of single quotes
      "semi": ["error", "always"], // Require semicolons at the end of statements
      "@typescript-eslint/no-unused-vars": ["warn"], // Warn on unused variables
      "@typescript-eslint/explicit-function-return-type": ["off"], // Turn off explicit return types
      "@typescript-eslint/explicit-module-boundary-types": ["off"], // Turn off explicit return types on module boundaries
      "no-console": ["warn"] // Warn when console statements are used
    },
    "env": {
      "node": true, // Node.js global variables and Node.js scoping
      "es6": true // Enable all ECMAScript 6 features except for modules
    }
  }
  